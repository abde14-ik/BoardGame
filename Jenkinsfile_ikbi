pipeline {
    agent any

    tools {
        maven 'maven3'     // Make sure 'maven3' is configured in Jenkins
        jdk 'jdk17'        // Make sure 'jdk17' is configured in Jenkins
    }

    environment {
        // Optional: you can set common env vars here if needed
    }

    stages {
        stage('Start') {
            steps {
                echo 'ğŸ—ï¸ Starting new Jenkins pipeline...'
            }
        }

        stage('Compile') {
            steps {
                echo 'ğŸ”§ Compiling source code...'
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running unit tests...'
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                echo 'ğŸ“¦ Packaging the application...'
                sh 'mvn package'
            }
        }

        stage('Done') {
            steps {
                echo 'âœ… Build stages complete!'
            }
        }
    }

    post {
        always {
            echo 'ğŸ“¬ Pipeline execution finished (success/failure)'
        }
        success {
            echo 'ğŸ‰ Build completed successfully!'
        }
        failure {
            echo 'âŒ Build failed. Please check logs.'
        }
    }
}
